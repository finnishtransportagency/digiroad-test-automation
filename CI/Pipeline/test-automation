pipeline {
    options {
        buildDiscarder(logRotator(numToKeepStr: "25"))
    }
    parameters {
        choice(name: 'SELAIN', choices: ['Chrome',
                                        'Firefox',
                                        'Headless Chrome',
                                        'Headless Firefox'],
                                        description: 'List of browsers used with testing')
    }
    triggers {
        cron('H 18 * * *')
    }
    agent {
        dockerfile {
            filename 'Dockerfile.robot'
            dir 'CI/Docker-image/'
            additionalBuildArgs  '--build-arg http_proxy=$http_proxy --build-arg https_proxy=$https_proxy'
            args '--shm-size=1g --env HTTPS_PROXY=$https_proxy'
        }
    }
    stages {
        stage('Robot Tests') {
            environment {
                ROBOT_CRED = credentials("ROBOT_USER")
                /*ROBOT_OPTIONS = '-v BROWSER:${params.SELAIN}'*/
                ROBOT_TESTS_DIR = "$WORKSPACE/Robot-Tests"
                ROBOT_REPORTS_DIR = "$WORKSPACE/logs"
            }
            steps {
                echo '${params.SELAIN}'
                echo '$SELAIN'
                echo '${SELAIN}'
                sh '''
                    /opt/robotframework/bin/run-tests-in-virtual-screen.sh
                '''
            }
        }
    }
    post {
        always {
            step([$class: 'Mailer', notifyEveryUnstableBuild: true, recipients: 'niko.lahtinen@sitowise.com', sendToIndividuals: false])
            archiveArtifacts artifacts: '**/log.html'
            archiveArtifacts artifacts: '**/*.png'
            deleteDir()
        }
    }
}
