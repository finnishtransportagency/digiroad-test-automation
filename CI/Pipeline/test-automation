pipeline {
    agent { 
        dockerfile {
            filename 'Dockerfile.robot'
            dir 'CI/Docker-image/'
            args '--shm-size=1g --build-arg http_proxy=$http_proxy --build-arg https_proxy=$https_proxy'
        }
    }
    stages {
        stage('Robot Tests') {
            environment {
                HTTPs_PROXY = "$https_proxy"
                ROBOT_USER = credentials("ROBOT_USER")
                BROWSER = 'chrome'
                ROBOT_OPTIONS = '-v LiviUSR:$ROBOT_USER_USR -v LiviPWD:$ROBOT_USER_PWD'
                ROBOT_TESTS_DIR = "$WORKSPACE"
                ROBOT_REPORTS_DIR = "$WORKSPACE/Reports"
                ROBOT_KEYWORDS_DIR = "$WORKSPACE/Keywords"
            }
            steps {
                sh '''
                    /opt/robotframework/bin/run-tests-in-virtual-screen.sh
                '''
            }
        }
    }
}
