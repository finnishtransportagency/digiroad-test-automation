pipeline {
    options {
        buildDiscarder(logRotator(numToKeepStr: "25"))
    }
    parameters {
        choice(name: 'SELAIN', choices: ['Chrome',
                                        'Firefox',
                                        'Headless Chrome',
                                        'Headless Firefox'],
                                        description: 'List of browsers used with testing')
    }
    triggers {
        cron('H 18 * * *')
    }
    agent any
    stages {
        stage("Robot tests"){
            steps{
                sh "chmod 777 logs"
                sh "docker run --env HTTPS_PROXY=$https_proxy --shm-size=1g -e BROWSER=$SELAIN -v $WORKSPACE/Robot-Tests:/opt/robotframework/tests:Z -v $WORKSPACE/logs:/opt/robotframework/reports:Z digiroad2-robot:latest"
            }
        }
    }

    post {
        always {
            step([$class: 'Mailer', notifyEveryUnstableBuild: true, recipients: 'niko.lahtinen@sitowise.com', sendToIndividuals: false])
            archiveArtifacts artifacts: '**/log.html'
            archiveArtifacts artifacts: '**/*.png'
            deleteDir()
        }
    }
}
